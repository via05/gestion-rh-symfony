{% extends 'base.html.twig' %}

{% block title %}New Employ√©{% endblock %}
{% block activeuser %}active{% endblock %}
{% block section %}
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Add new User</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <form>
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.fullName) }}</label>
                    {{ form_widget(form.fullName,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.email) }}</label>
                    {{ form_widget(form.email,{'attr': {'class': 'form-control','type':'email'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.password) }}</label>
                    {{ form_widget(form.password,{'attr': {'class': 'form-control','type':'password'}}) }}
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.fonction) }}</label>
                    {{ form_widget(form.fonction,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.salaire) }}</label>
                    {{ form_widget(form.salaire,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <!-- /.card-body -->

            <div class="card-footer">
                {{ include('gr_user/_form.html.twig', {'button_label': 'Save'}) }}
                <a class="btn btn-info btn-sm "href="{{ path('app_gr_user_index') }}">Back to list</a>
            </div>

        </form>
    </div>
    {{ form_end(form) }}
{% endblock %}

