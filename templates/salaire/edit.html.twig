{% extends 'base.html.twig' %}

{% block title %}Edit Salaire{% endblock %}
{% block activecatask %}active{% endblock %}
{% block section%}
    {{ form_start(form) }}
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit salaire</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->

        <form>
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.montant) }}</label>
                    {{ form_widget(form.montant,{'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">{{ form_label(form.valeur) }}</label>
                    {{ form_widget(form.valeur,{'attr': {'class': 'form-control'}}) }}
                </div>
            </div>


            <!-- /.card-body -->

            <div class="card-footer">
                {{ include('salaire/_form.html.twig', {'button_label': 'Update'}) }}
                {{ include('salaire/_delete_form.html.twig') }}
                <a class="btn btn-info btn-sm "href="{{ path('app_salaire_index') }}">Back to list</a>
            </div>

        </form>
    </div>
    {{ form_end(form) }}

{% endblock %}